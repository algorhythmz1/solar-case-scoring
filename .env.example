# GoHighLevel API Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Your GoHighLevel API Key
# Get from: GoHighLevel Settings > API
GHL_API_KEY=your_api_key_here

# Your GoHighLevel Location ID
# Get from: GoHighLevel URL or Settings > Business Profile
GHL_LOCATION_ID=your_location_id_here

# API Endpoint (v1 or v2)
GHL_API_URL=https://rest.gohighlevel.com/v1/contacts/

# Scoring Configuration
SCORING_PAYING_MORE=50
SCORING_SHADE=30
SCORING_INVERTER_OUTSIDE=20
SCORING_THRESHOLD=60

# Tag Names
TAG_QUALIFIED=good_solar_case
TAG_UNQUALIFIED=low_quality_case

# Custom Field Keys (must match GoHighLevel)
FIELD_SCORE=solar_case_score
FIELD_PAYING_MORE=paying_more_post_solar
FIELD_SHADE=panels_shaded
FIELD_INVERTER_OUTSIDE=inverter_outside
FIELD_QUALIFICATION=qualification_status
